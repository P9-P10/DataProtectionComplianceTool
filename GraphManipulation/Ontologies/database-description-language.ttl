@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix ddl:   <http://www.cs-22-dt-9-03.org/database-description-language#> .

ddl:
    a            owl:Ontology ;
    rdfs:label   "Database Description Language (DDL) Vocabulary"@en ;
    rdfs:comment "This vocabulary defines terms that can be used to describe databases"@en ;
    sh:declare   [ sh:prefix    "ddl" ;
                   sh:namespace "http://www.cs-22-dt-9-03.org/database-description-language#" ; ] ; .


### Properties

ddl:hasStructure
    a rdf:Property .

ddl:hasDataType
    a rdf:Property .

ddl:hasDatabase
    a rdf:Property .

ddl:hasName
    a rdf:Property .

ddl:primaryKey
    a rdf:Property .

ddl:foreignKey
    a rdf:Property .

ddl:references
    a rdf:Property .

ddl:isNotNull
    a rdf:Property .

ddl:columnOptions
    a rdf:Property .

ddl:foreignKeyOnAction
    a rdf:Property .

ddl:foreignKeyOnDelete
    a                  rdf:Property ;
    rdfs:subPropertyOf ddl:foreignKeyOnAction .

ddl:foreignKeyOnUpdate
    a                  rdf:Property ;
    rdfs:subPropertyOf ddl:foreignKeyOnAction .

ddl:foreignKeyOnSubjectsShape
    a                   sh:NodeShape ;
    sh:targetSubjectsOf ddl:foreignKeyOnAction ;
    sh:class            ddl:Column .

ddl:foreignKeyOnObjectsShape
    a                  sh:NodeShape ;
    sh:targetObjectsOf ddl:foreignKeyOnAction ;
    sh:datatype        xsd:string .

ddl:columnOptionsSubjectShape
    a                   sh:NodeShape ;
    sh:targetSubjectsOf ddl:columnOptions ;
    sh:class            ddl:Column .

ddl:columnOptionsObjectShape
    a                  sh:NodeShape ;
    sh:targetObjectsOf ddl:columnOptions ;
    sh:datatype        xsd:string .

ddl:isNotNullShape
    a                  sh:NodeShape ;
    sh:targetObjectsOf ddl:isNotNull ;
    sh:datatype        xsd:boolean .

ddl:ForeignKeyObjectShape
    a                  sh:NodeShape ;
    sh:targetObjectsOf ddl:foreignKey ;
    sh:property        [ sh:path     ddl:references ;
                         sh:class    ddl:Column ;
                         sh:minCount 1 ;
                         sh:maxCount 1 ; ] .

ddl:ReferencesSubjectObjectShape
    a                   sh:NodeShape ;
    sh:targetSubjectsOf ddl:references ;
    sh:targetObjectsOf  ddl:references ;
    sh:class            ddl:Column .


### Entity

ddl:Entity
    a rdfs:Class .

ddl:NamedEntity
    a               rdfs:Class, sh:NodeShape ;
    rdfs:subClassOf ddl:Entity ;
    sh:property     [ sh:path     ddl:hasName ;
                      sh:datatype xsd:string ;
                      sh:minCount 1 ;
                      sh:maxCount 1 ; ] .


### Database

ddl:Database
    a               rdfs:Class, sh:NodeShape ;
    rdfs:subClassOf ddl:NamedEntity ;
    sh:property     [ sh:path     ddl:hasStructure ;
                      sh:class    ddl:Structure ;
                      sh:minCount 1 ; ] .

ddl:DatabaseShape
    a             sh:NodeShape ;
    sh:targetNode ddl:Database ;
    sh:property   [ sh:path     [ sh:inversePath rdf:type ] ;
                    sh:maxCount 1 ] .

ddl:Relational
    a               rdfs:Class, sh:NodeShape ;
    rdfs:subClassOf ddl:Database ;
    sh:property     [ sh:path     ddl:hasStructure ;
                      sh:class    ddl:Schema ;
                      sh:minCount 1 ; ] .

ddl:SQLite
    a               rdfs:Class ;
    rdfs:subClassOf ddl:Relational .

### Structure

ddl:Structure
    a               rdfs:Class ;
    rdfs:subClassOf ddl:NamedEntity ;
    sh:property     [ sh:path     ddl:hasDatabase ;
                      sh:class    ddl:Database ;
                      sh:minCount 1 ;
                      sh:maxCount 1 ] .

ddl:Schema
    a               rdfs:Class, sh:NodeShape ;
    rdfs:subClassOf ddl:Structure ;
    sh:property     [ sh:path     ddl:hasStructure ;
                      sh:class    ddl:Table ;
                      sh:minCount 1 ] .

ddl:Table
    a               rdfs:Class, sh:NodeShape ;
    rdfs:subClassOf ddl:Structure ;
    sh:property     [ sh:path     ddl:hasStructure ;
                      sh:class    ddl:Column ;
                      sh:minCount 1 ; ] ;
    sh:property     [ sh:path     ddl:primaryKey ;
                      sh:class    ddl:Column ;
                      sh:minCount 1 ; ] ;
    sh:property     [ sh:path  ddl:foreignKey ;
                      sh:class ddl:Column ; ] .

ddl:Column
    a               rdfs:Class, sh:NodeShape ;
    rdfs:subClassOf ddl:Structure ;
    sh:property     [ sh:path     ddl:hasDataType ;
                      sh:datatype xsd:string ;
                      sh:minCount 1 ;
                      sh:maxCount 1 ] ;
    sh:property     [ sh:path     ddl:columnOptions ;
                      sh:maxCount 1 ] ;
    sh:property     [ sh:path     ddl:isNotNull ;
                      sh:minCount 1 ;
                      sh:maxCount 1 ] .